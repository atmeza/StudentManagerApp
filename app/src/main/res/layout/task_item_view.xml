<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:clickable="true"
        android:layout_height="wrap_content" android:weightSum="10"
        android:backgroundTintMode="src_over"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/task_item_view_title"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="Some example text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/task_item_view_time"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="7:00 PM"
            android:maxLines="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_weight="7.44" />

        <Button
            android:id="@+id/task_item_view_delete"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_delete" />


    </LinearLayout>

</merge>